@model IEnumerable<WebApplication1.Models.exame>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Exames</h2>

<p>
    @Html.ActionLink("Cadastrar Novo Exame", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.observacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipoexame.nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.observacao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoexame.nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_exame }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.id_exame }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.id_exame })
        </td>
    </tr>
}

</table>
